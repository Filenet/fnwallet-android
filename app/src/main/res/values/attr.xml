<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_background" format="color|integer" />
        <attr name="ci_selected_background" format="color|integer" />
        <attr name="ci_gravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
            <enum name="solo" value="2" />
        </attr>
    </declare-styleable>

</resources>