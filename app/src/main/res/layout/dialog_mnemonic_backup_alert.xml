<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_common_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="23dp"
        android:layout_marginTop="22dp"
        android:src="@mipmap/ic_no_screenshot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/mnemonic_backup_alert_title"
        android:textColor="@color/discovery_application_text_color"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/mnemonic_backup_alert_tips"
        android:textColor="@color/property_ico_worth_color"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/mnemonic_backup_alert_btn"
        android:textColor="@color/white"
        android:textSize="13sp" />


</LinearLayout>