<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="22dp"
        android:layout_marginRight="@dimen/dp_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_mnemonic"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/etc_transfer_hex_data_et_shape"
            android:gravity="start"
            android:hint="@string/load_wallet_by_mnemonic_hint"
            android:padding="10dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:text="@string/load_wallet_by_mnemonic_standard"
                android:textColor="@color/discovery_application_item_name_color"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/lly_standard_menu"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_right_white_arrow" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/mine_menu_divider_color"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_wallet_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@null"
            android:hint="@string/create_wallet_name_hint"
            android:inputType="text"
            android:maxLength="8"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/mine_menu_divider_color" />

        <EditText
            android:id="@+id/et_wallet_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/create_wallet_pwd_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/mine_menu_divider_color" />

        <EditText
            android:id="@+id/et_wallet_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/create_wallet_pwd_again_hint"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/mine_menu_divider_color" />

        <EditText
            android:id="@+id/et_wallet_pwd_reminder_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="@string/create_wallet_pwd_reminder_info_hint"
            android:singleLine="true"
            android:textColor="@color/discovery_application_item_name_color"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/mine_menu_divider_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lly_wallet_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/agreement_circle_cb_selector"
                android:drawablePadding="5dp"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/create_wallet_agreement_reminder"
                android:textColor="@color/base_text_color"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/create_wallet_agreement"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_load_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_common_btn"
            android:enabled="false"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/load_wallet_btn"
            android:textColor="@color/white" />

    </LinearLayout>


</ScrollView>