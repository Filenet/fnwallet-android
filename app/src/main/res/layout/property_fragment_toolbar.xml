<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.ToolBar.Menu"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_thumb_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_56"
                android:paddingRight="@dimen/dp_56"
                android:textColor="@color/color_333333"
                android:textSize="17.8sp" />


            <LinearLayout
                android:id="@+id/lly_menu"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="2dp"
                    android:src="@mipmap/ic_property_more" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</merge>