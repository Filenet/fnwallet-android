<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8fa"
    tools:context=".ui.activity.PayResultActivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/create_success" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/zhuanzhangshenqingyitijiao"
            android:textSize="17.8sp" />

        <TextView
            android:id="@+id/tv_tobills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/qingshaohouchakanzhangdan"
            android:textColor="@color/text_grey"
            android:textSize="13sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>