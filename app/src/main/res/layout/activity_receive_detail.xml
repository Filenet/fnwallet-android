<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F8F8F8" />


            <TextView
                android:id="@+id/tvReceiptValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="14dp"
                android:textColor="@color/color_333333"
                android:textSize="20sp"
                tools:text="-100FN" />

            <TextView
                android:id="@+id/tvProxyStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#18AD7A"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="成功" />

            <LinearLayout
                android:id="@+id/llReceiveHash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/receive_hash"
                    android:textColor="#A5ACBC"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fnReceiveHash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="#2B2C35"
                    android:textSize="13sp"
                    tools:text="" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="@color/common_line_color" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/proxy_hash"
                android:textColor="#A5ACBC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvProxyHash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:textColor="#2B2C35"
                android:textSize="13sp"
                tools:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/common_line_color" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/fakuanfang"
                android:textColor="#A5ACBC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fnSendAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="00.00"
                android:textColor="#2B2C35"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/common_line_color" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/shoukuanfang"
                android:textColor="#A5ACBC"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fnReceiveAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="00.00"
                android:textColor="#2B2C35"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/common_line_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llBlockHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qukuaihao"
                        android:textColor="#A5ACBC"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="22dp"
                        android:textColor="#2B2C35"
                        android:textSize="13sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="@color/common_line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExpiredHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expired_height"
                    android:textColor="#A5ACBC"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvExpiredHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:textColor="#2B2C35"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llContractDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:background="@color/common_line_color" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_duration"
                        android:textColor="#A5ACBC"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvContractDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="22dp"
                        android:textColor="#2B2C35"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/common_line_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="22dp"
                android:paddingBottom="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="#A5ACBC"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTimeStamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="00.00"
                    android:textColor="#2B2C35"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textColor="#A5ACBC"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="00.00"
                    android:textColor="#2B2C35"
                    android:textSize="13sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/common_line_color" />


            <LinearLayout
                android:id="@+id/llOptStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="26dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnReceiveRefuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_refuse"
                    android:gravity="center"
                    android:padding="@dimen/dp_15"
                    android:text="@string/refuse"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btnReceiveAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@drawable/btn_approve"
                    android:gravity="center"
                    android:padding="@dimen/dp_15"
                    android:text="@string/approve"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>